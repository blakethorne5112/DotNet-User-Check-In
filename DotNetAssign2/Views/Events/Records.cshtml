@model IEnumerable<DotNetAssign2.Models.Event>
@{
    ViewData["title"] = "Event List";
}

<h1>Event List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Location)
            </th>
            <th />
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Location)
                </td>
                <td>
                    <button type="submit" method="post" asp-action="CheckIn" asp-route-id="@item.Id">Check In</button>
                    <button type="submit" method="post" asp-action="CheckOut" asp-route-id="@item.Id">Check Out</button>
                </td>
            </tr>
        }
    </tbody>
</table>
