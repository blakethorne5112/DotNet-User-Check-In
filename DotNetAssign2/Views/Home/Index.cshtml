@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4">Welcome to the .NET Check In System</h1>
            <p class="lead">Manage your check-in and check-out with ease.</p>
        </div>
    </div>
    <div class="row justify-content-center mt-4">
        <div class="col-md-4 text-center">
            <a asp-area="" asp-controller="Users" asp-action="CheckIn" class="btn btn-success btn-lg w-100">Check In</a>
        </div>
        <div class="col-md-4 text-center">
            <a asp-area="" asp-controller="Users" asp-action="CheckOut" class="btn btn-danger btn-lg w-100">Check
                Out</a>
        </div>
        <div class="col-md-4 text-center">
            <a asp-area="" asp-controller="Users" asp-action="Records" class="btn btn-primary btn-lg w-100">Records</a>
        </div>
    </div>
</div>
