@{
    ViewData["Title"] = "Home Page";
}

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f8f9fa;
    }

    .main-container {
        background-color: #fff;
        border: 1px solid #e1e4e8;
        border-radius: 8px;
        padding: 20px;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .btn {
        font-size: 18px;
        border-radius: 8px;
    }

    .btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }
</style>

<div class="container mt-4">
    <div class="main-container">
        <div class="row justify-content-center">
            <div class="col-md-8 text-center">
                <h1 class="display-4">Welcome to the .NET Check In System</h1>
                <p class="lead">Manage your check-in and check-out with ease.</p>
            </div>
        </div>
        <div class="row justify-content-center mt-4">
            <div class="col-md-4 text-center">
                <a asp-area="" asp-controller="Users" asp-action="CheckIn" class="btn btn-success btn-lg w-100">
                    <i class="fas fa-sign-in-alt"></i> Check In
                </a>
            </div>
            <div class="col-md-4 text-center">
                <a asp-area="" asp-controller="Users" asp-action="CheckOut" class="btn btn-danger btn-lg w-100">
                    <i class="fas fa-sign-out-alt"></i> Check Out
                </a>
            </div>
            <div class="col-md-4 text-center">
                <a asp-area="" asp-controller="Users" asp-action="Records" class="btn btn-primary btn-lg w-100">
                    <i class="fas fa-clipboard-list"></i> Records
                </a>
            </div>
        </div>
    </div>
</div>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
