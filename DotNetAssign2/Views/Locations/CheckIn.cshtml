@model DotNetAssign2.Models.Users

@{
    ViewData["Title"] = "Check In";
}

<h1>Check In</h1>
@*
<h4>Users</h4> *@
<hr />
<div class="box">
    <h1 style="text-align:center">Check In</h1>
    <hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="CheckIn">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Phone" class="control-label"></label>
                    <input asp-for="Phone" class="form-control" />
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>
                <div class="form-group submit-group d-grid gap-2">
                    <input type="submit" value="Check In" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

@* <div>
    <a asp-action="Index">Back to List</a>
</div> *@

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style> 
    /* Custom styles for the box */
    .box {
        background-color: #f9f9f9;
        border-radius: 8px;
        box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
        padding: 20px;
        margin: 20px auto;
        width: 50%;
    }

    .submit-group {
        margin-top: 20px;
        /* Add padding above submit button */
    }
</style>