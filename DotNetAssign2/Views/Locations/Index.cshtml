@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Authorization
@model IEnumerable<DotNetAssign2.Models.Locations>
@inject UserManager<IdentityUser> UserManager
@inject IAuthorizationService AuthorizationService

@{
    ViewData["Title"] = "Index";
}

<h1>Locations</h1>

@if (User.IsInRole("Staff") || User.IsInRole("Administrator")) {
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MapsLink)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a href="@item.MapsLink">Google Maps</a>
            </td>
            <td>
                @if (User.IsInRole("Staff") || User.IsInRole("Administrator")) {
                    <div>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </div>
                }
                <a asp-action="CheckIn" asp-route-id="@item.Id">Check in</a>
                <a asp-action="CheckOut" asp-route-id="@item.Id">Check out</a>
            </td>
        </tr>
}
    </tbody>
</table>
